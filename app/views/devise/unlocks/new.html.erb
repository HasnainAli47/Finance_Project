<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-4">Resend unlock instructions</h2>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <div class="mb-4">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 rounded-md px-3 py-2 w-full" %>
    </div>

    <div class="actions">
      <%= f.submit "Resend unlock instructions", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
