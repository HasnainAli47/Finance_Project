<!-- Button to open the modal -->
<div class="flex justify-end">
  <button id="filterButton" class="bg-blue-500 mb-3 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Filter Out Bills</button>
</div>

<!-- Modal dialog -->
<div id="filterModal" class="hidden fixed inset-0 z-50 overflow-auto bg-gray-900 bg-opacity-50 flex justify-center items-center">
  <div class="bg-white w-3/4 md:w-1/2 p-6 rounded-lg">
    <h2 class="text-lg font-bold mb-4">Select Dates to Filter Bills</h2>
    <%= form_tag(filter_bills_path, method: :get) do %>
      <div class="mb-4">
        <label for="from_date" class="block text-sm font-medium text-gray-700 mb-2">From Date:</label>
        <%= date_field_tag "from_date", params[:from_date], class: "border border-gray-300 rounded-md px-3 py-2 w-full", required: true%>
      </div>
      <div class="mb-6">
        <label for="to_date" class="block text-sm font-medium text-gray-700 mb-2">To Date:</label>
        <%= date_field_tag "to_date", params[:to_date], class: "border border-gray-300 rounded-md px-3 py-2 w-full", required: true %>
      </div>
      <div class="text-center">
        <%= submit_tag "Filter", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>

